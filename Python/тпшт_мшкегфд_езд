server {
        listen          X.X.X.X:$port;
        server_name     $server_alias;
        root            $document_root;
        charset         utf-8;
        include         global/*.conf;
        error_log       $error_log;
        rewrite ^/(.+\.php)$ /$1 last;
        location ~ \.php$ {
                fastcgi_pass unix:$socket;
                fastcgi_split_path_info ^(.+\.php)(/.*)$;
                include fastcgi_params;
                fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
                fastcgi_param HTTPS off;
                internal;
        }
}
